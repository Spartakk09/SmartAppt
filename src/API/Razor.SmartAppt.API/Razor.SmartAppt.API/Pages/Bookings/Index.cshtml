@page
@model Razor.SmartAppt.API.Pages.Bookings.IndexModel

<h2>Bookings</h2>

<form method="post" asp-page-handler="Load" class="mb-4">
    <div class="row">
        <div class="col-md-2">
            <label asp-for="BusinessId" class="form-label">Business Id</label>
            <input asp-for="BusinessId" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select" onchange="this.form.submit()">
                <option value="All" selected>All</option>
                <option value="Pending">Pending</option>
                <option value="Confirmed">Confirmed</option>
                <option value="Canceled">Canceled</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="Date" class="form-label">Date</label>
            <input asp-for="Date" class="form-control" type="date" onchange="this.form.submit()" />
        </div>
        <div class="col-md-2">
            <label asp-for="Skip" class="form-label">Skip</label>
            <input asp-for="Skip" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Take" class="form-label">Take</label>
            <input asp-for="Take" class="form-control" />
        </div>
        <div class="col-md-2 align-self-end mt-4">
            <button type="submit" class="btn btn-secondary">Load Bookings</button>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

@if (Model.Bookings.Any())
{
    <hr />
    <h3>Bookings List</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking Id</th>
                <th>Service Id</th>
                <th>Customer Id</th>
                <th>Start</th>
                <th>End</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Bookings)
            {
                <tr>
                    <td>@b.BookingId</td>
                    <td>@b.ServiceId</td>
                    <td>@b.CustomerId</td>
                    <td>@b.StartAtUtc</td>
                    <td>@b.EndAtUtc</td>
                    <td>@b.Status</td>
                    <td>@b.Notes</td>
                    <td>@b.CreatedAtUtc</td>
                    <td>
                        <div class="d-flex gap-2">
                            @if (b.Status == "Pending")
                            {
                                <form method="post" asp-page-handler="Decide">
                                    <input type="hidden" name="BusinessId" value="@Model.BusinessId" />
                                    <input type="hidden" name="bookingId" value="@b.BookingId" />
                                    <input type="hidden" name="confirm" value="true" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <form method="post" asp-page-handler="Decide">
                                    <input type="hidden" name="BusinessId" value="@Model.BusinessId" />
                                    <input type="hidden" name="bookingId" value="@b.BookingId" />
                                    <input type="hidden" name="confirm" value="false" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Reject / cancel this booking?');">Reject</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
